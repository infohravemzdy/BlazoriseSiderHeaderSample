@namespace BlazoriseSiderHeaderSample.Shared

<Bar @ref="@SideMenu" Breakpoint="Breakpoint.Desktop" 
    Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small"
    Background="Background.Primary" ThemeContrast="ThemeContrast.Light">
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/" Title="Home">
                    <BarIcon IconName="IconName.Home" />
                    Home
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/dashboard" Title="Dashboard">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/email" Title="Email">
                    <BarIcon IconName="IconName.Mail" />
                    Email
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/apps" Title="Apps">
                    <BarIcon IconName="IconName.Smartphone" />
                    Apps
                </BarLink>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>

@code {
    [CascadingParameter]
    protected MainLayout? Layout { get; set; }

    protected Bar? _SideMenu;

    public Bar? SideMenu { get => _SideMenu;
        set {
            _SideMenu = value;

            Layout?.UpdateSideMenuRef(value);
        } 
    }
}
